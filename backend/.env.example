# Core AI APIs (at least one required)
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-api-key-here  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Gemini model selection (optional)
GEMINI_MODEL=gemini-2.0-flash-exp

# Web Scraping & Search
BRAVE_API_KEY=your-brave-api-key-here
PLAYWRIGHT_HEADLESS=true

# Optional: Enhanced Audio (if using Uberduck)
UBERDUCK_API_KEY=your-uberduck-key-here
UBERDUCK_SECRET=your-uberduck-secret-here

# Caching
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true

# Configuration
DEMO_MODE=false
MAX_GENERATION_TIME=15
TARGET_AUDIENCE=yc
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]